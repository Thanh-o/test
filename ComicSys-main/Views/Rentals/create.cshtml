@model ComicSys.Models.Rental

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select asp-for="CustomerId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "FullName"))"></select>
    </div>

    <div class="form-group">
        <label for="RentalDate">Rental Date</label>
        <input asp-for="RentalDate" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ReturnDate">Return Date</label>
        <input asp-for="ReturnDate" class="form-control" />
    </div>

    <h3>Comic Books to Rent</h3>
    <div id="rental-details">
        <div class="form-group">
            <label for="ComicBookID">Comic Book</label>
            <select name="rentalDetails[0].ComicBookID" class="form-control"
                asp-items="@(new SelectList(ViewBag.ComicBooks, "ComicBookID", "Title"))"></select>
        </div>

        <div class="form-group">
            <label for="Quantity">Quantity</label>
            <input name="rentalDetails[0].Quantity" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label for="PricePerDay">Price per Day</label>
            <input name="rentalDetails[0].PricePerDay" type="number" step="0.01" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Rental</button>
</form>
